@require './config'

$mobileSidebarWidth = $sidebarWidth * 0.82

// narrow desktop / iPad
@media (max-width: $MQNarrow)
  .sidebar
    position relative
    margin-top 0
    font-size 15px
    // width $mobileSidebarWidth
  .page
    // padding-left $mobileSidebarWidth
  .content:not(.custom)
    padding 2rem

// narrow mobile
@media (max-width: $MQMobileNarrow)
  h1
    font-size 1.9rem
  .content:not(.custom)
    padding 1.5rem
  .content
    pre, pre[class*="language-"]
      margin 0.85rem -1.5rem
      border-radius 0
